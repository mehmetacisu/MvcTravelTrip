<form method="post">
    @{string blogId = TempData.Peek("bID").ToString(); }
    <input type="hidden" value="@blogId" name="BlogID" />
    <input type="text" placeholder="Kullanıcı Adı" name="Username" required />
    <input type="text" placeholder="Mail" name="Mail" required />
    <textarea placeholder="Yorum" name="Comment"></textarea>
    <input type="submit" value="Gönder" />
</form>
 
