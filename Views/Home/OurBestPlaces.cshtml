@using TravelTripProject.Models.Classes
@model List<Blog>
<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="box-left">
        @foreach (var blog in Model)
        {
            <div class="bot-img">
                <img src="@blog.BlogPhoto" alt="@blog.Header" />
            </div>
            <div class="bot-desc">
                @if (blog.Description.Length >= 50)
                {
                    <p>@blog.Description.Substring(0, 50)...</p>

                }
                else
                {
                    <p>@blog.Description...</p>

                }
            </div>
            <div class="clear"></div>
        }
    </div>
    <div class="box1-left">
       @Html.Action("OurBestPlacesRight","Home")
    </div>
</div>

