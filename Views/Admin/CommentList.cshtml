@using TravelTripProject.Models.Classes
@model List<Comments>
@{
    ViewBag.Title = "CommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var comment in Model)
    {
        <tr>
            <td>@comment.ID</td>
            <td>@comment.Username</td>
            <td>@comment.Mail</td>
            <td>@comment.Comment</td>
            <td>@comment.Blog.Header</td>
            <td>
                <a href="/Admin/DeleteComment/@comment.ID" class="btn btn-danger">Sil</a>
                <a href="/Admin/UpdateComment/@comment.ID" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>